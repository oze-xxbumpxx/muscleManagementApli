{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "moduleResolution": "bundler",
      "jsx": "react-jsx",
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["./*"],
        "@features/*": ["features/*"],
        "@shared/*": ["shared/*"],
        "@graphql/*": ["graphql/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }