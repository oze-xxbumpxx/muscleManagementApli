{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["./*"],
        "@resolvers/*": ["resolvers/*"],
        "@usecases/*": ["usecases/*"],
        "@repositories/*": ["repositories/*"],
        "@models/*": ["models/*"],
        "@types/*": ["types/*"],
        "@config/*": ["config/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }